<!-- countdown.liquid -->
<div class="{% if section.settings.fullwidth %}container-fluid p-0{% else %}container{% endif %}">
  <div class="section-block">
    {%- include 'section-heading' -%}
    <div class="countdown-wrapper text-center" style="background-color:{{section.settings.background}}">
      {%- if section.settings.heading != blank -%}
      <h2 class="countdown-title font-family-2 text-white">{{section.settings.heading}}</h2>
      {%- endif -%}
      {%- if section.settings.info != blank -%}
      <p class="text-white mb-3 mb-lg-5">{{section.settings.info}}</p>
      {%- endif -%}
      {%- if section.settings.time != blank -%}
      <div class="js-countdown js-countdown--3 font-family-2" data-time="{{section.settings.time}}"></div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Countdown",
  "class": "index-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "fullwidth",
      "label": "Fullwidth",
      "default": false
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Countdown"
    },
    {
      "type": "textarea",
      "id": "des",
      "label": "HTML / Description"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#151748"
    },
      {
        "type": "header",
        "content": "Countdown"
      },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Hurry up!"
    },
    {
      "type": "text",
      "id": "info",
      "label": "Information",
      "default": "Last year our tickets sold fast so donâ€™t miss. Conference will start in"
    },
    {
      "type": "text",
      "id": "time",
      "label": "Time",
      "info": "ðŸ’¡ Example: 2025-05-11T00:00:00",
      "default": "2021-05-11T00:00:00"
    }
  ],
  "presets": [
    {
      "name": "Countdown",
      "category": "Text"
    }
  ]
}
{% endschema %}