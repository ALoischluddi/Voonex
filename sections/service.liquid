<!-- service.liquid -->
<div class="{% if section.settings.fullwidth %}container-fluid{% else %}container{% endif %}">
  <div class="section-block">
    {%- include 'section-heading' -%}
    <div class="services-wrapper dots-negative">
      <div class="services-slider row" id="service-list-{{ section.id }}"
           data-rows="{{section.settings.rows}}"
           data-slidesToShow="{{section.blocks.size}}"
           data-slidestoscroll="{{section.blocks.size}}"
           data-arrows="{{ section.settings.arrows }}"
           data-dots="{{ section.settings.dots }}" 
           data-draggable="{{ section.settings.draggable }}" 
           data-infinite="{{ section.settings.infinite }}" 
           data-section-id="{{ section.id }}" 
           data-section-type="slickCarousels">
        {%- for block in section.blocks -%}
        <div class="col services-item carousel__slide-wrapper--{{block.id}}" {{ block.shopify_attributes }}>
          {%- case section.settings.layout -%}
          {%- when 'style-1' -%}
          <div class="media service-1 text-left {% if forloop.first %}service-first{% endif %}">
            <span class="align-self-center mr-3 iconx11 text-theme">
              {{block.settings.icon | default:'[[ Icon ]]'}}
            </span>
            <div class="media-body">
              <h5 class="mt-0 mb-2">{{block.settings.title}}</h5>
              <div>{{block.settings.description}}</div>
            </div>
          </div>
          {%- when 'style-2' -%}
          <div class="media service-2 text-center {% if forloop.first %}service-first{% endif %}">
            <div class="media-body transition">
              <div class="mb-2 iconx11 text-theme-2">
                {{block.settings.icon | default:'[[ Icon ]]'}}
              </div>
              <h5 class="mt-5 mb-4 font-weight-bold text-uppercase">{{block.settings.title}}</h5>
              <div>{{block.settings.description}}</div>
            </div>
          </div>
          {%- when 'style-3' -%}
          <div class="media service-3 text-center {% if forloop.first %}service-first{% endif %}">
            <div class="media-body">
              <h5 class="mt-0 mb-2 text-theme">
                <span class="mr-1 iconx4">
                  {{block.settings.icon | default:'[[ Icon ]]'}}
                </span>
                {{block.settings.title}}
              </h5>
              <div>{{block.settings.description}}</div>
            </div>
          </div>
          {%- endcase -%}
        </div>
        {%- endfor -%}
      </div>
    </div>
    {%- if section.blocks.size == 0 -%}
    {%- include 'no-blocks' -%}
    {%- endif -%}
  </div>
</div>

